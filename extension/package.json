{
	"name": "vscode-status",
	"displayName": "VSCode Status",
	"description": "Export your VSCode Activity to a REST API and access it anytime. No authentication required.",
	"icon": "assets/icon.png",
	"publisher": "snehasishcodes",
	"author": {
		"name": "snehasishcodes",
		"email": "snehasishcodes@gmail.com",
		"url": "https://snehasish.xyz"
	},
	"repository": {
		"url": "https://github.com/snehasishcodes/vscode-status"
	},
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.95.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": ["*"],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "VSCode Status Settings",
			"properties": {
				"vscode-status.uid": {
					"type": "string",
					"default": "",
					"description": "Unique ID",
					"readOnly": true
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.95.0",
		"@types/mocha": "^10.0.9",
		"@types/node": "20.x",
		"@typescript-eslint/eslint-plugin": "^8.10.0",
		"@typescript-eslint/parser": "^8.7.0",
		"eslint": "^9.13.0",
		"typescript": "^5.6.3",
		"ts-loader": "^9.5.1",
		"webpack": "^5.95.0",
		"webpack-cli": "^5.1.4",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1"
	}
}